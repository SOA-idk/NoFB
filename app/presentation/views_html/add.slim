.container
  form role="form" method='POST' id='show-group-form'
    .row.vertical-align
      .col-md-2.col-sm-3
        .text-right Group URL:
      .col-md-8.col-sm-6
        select class="form-select" aria-label=".form-select-lg example" name="fb_url" id="fb_url"
          - groups.each do |group|
            option value=group.group_url  = group.group_name
    .row
      .col-md-12.blank-row
    .row.vertical-align
      .col-md-2.col-sm-3
        .text-right Subscribed words:
      .col-md-8.col-sm-6
        input { 
          type='text' name='subscribed_word'
          id='subscribed_word' class="form-control"
          placeholder="e.g. 肉桂捲, Cinnamon rolls"
        }
    .row
      .col-md-12.blank-row
    .row
      .col-md-4.blank-row
      .col-md-4.text-center
        button { 
          type='submit' id='post-form-submit' class='submit' 
          value='submit' class="btn btn-success" 
        } Done
      .col-md-4.blank-row